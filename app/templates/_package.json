{
  "name": "<%= projectName %>",
  "description": "<%= description %>",
  "version": "0.1.0",
  "author": "<%- projectAuthor %>",
  "scripts": {
    "clean": "npm install rimraf && rimraf dist node_modules typings",
    "build": "npm run tslint && rimraf dist && tsc && npm run copy-dist && npm run license-check",
    "build:w": "npm run tslint && rimraf dist && tsc && npm run copy-dist:w && npm run watch-task",
    "watch-task": "concurrently \"npm run tsc:w\"  \"npm run copy-dist:w\"  \"npm run license-check\"",
    "tslint": "tslint -c tslint.json *.ts && tslint -c tslint.json src/{,**/}**.ts",
    "copy-dist": "cpx \"./src/**/*.{html,css,json,png,jpg,gif,svg}\" ./dist/src",
    "copy-dist:w": "cpx \"./src/**/*.{html,css,json,png,jpg,gif,svg}\" ./dist/src -w",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "pretest": "npm run build",
    "test": "karma start karma.conf.js --reporters mocha,coverage --single-run",
    "test-browser": "npm run build && karma start karma.conf.js --reporters kjhtml ",
    "posttest": "remap-istanbul -i coverage/report/coverage-final.json -o coverage/report -t html && remap-istanbul -i coverage/report/coverage-final.json -o coverage/report/coverage-final.json",
    "coverage": "npm run test && wsrv -o -p 9875 ./coverage/report",
    "prepublish": "npm run build",
    "travis": "echo 'travis script placeholder'",
    "license-check": "echo 'license check is disabled'",
    "link": "npm link alfresco-js-api ng2-alfresco-core"
  },
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/<%= githubAccount %>/<%= projectName %>.git"
  },
  "bugs": {
    "url": "https://github.com/<%= githubAccount %>/<%= projectName %>/issues"
  },
  "dependencies": {
    "ng2-alfresco-core": "0.3.2"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.32",
    "@types/jasmine": "^2.2.33",
    "@types/node": "^6.0.42",
    "cpx": "1.3.1",
    "jasmine-ajax": "3.2.0",
    "jasmine-core": "2.4.1",
    "karma": "0.13.22",
    "karma-chrome-launcher": "1.0.1",
    "karma-coverage": "1.0.0",
    "karma-jasmine": "1.0.2",
    "karma-jasmine-ajax": "^0.1.13",
    "karma-jasmine-html-reporter": "0.2.0",
    "karma-mocha-reporter": "2.0.3",
    "license-check": "1.1.5",
    "remap-istanbul": "0.6.3",
    "rimraf": "2.5.2",
    "traceur": "0.0.91",
    "tslint": "3.15.1",
    "typescript": "^2.0.3",
    "wsrv": "^0.1.5"
  }
}
